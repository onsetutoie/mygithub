<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.dao.RoleDao">

    <!--复用查询的字段-->
    <sql id="column">
        select id,role_name,role_code,description,create_time,update_time,is_deleted
    </sql>
<!--
    保存：bean对象保存前id属性是没有值的。保存后执行了insert语句，数据库会分配主键
     mybatis框架会获取数据库分配的主键值，并赋值给bean对象的id属性，这个过程，称为主键回填
-->
    <insert id="insert" parameterType="Role" useGeneratedKeys="true" keyProperty="id">
        insert into acl_role(role_name,role_code,description) value (#{roleName},#{roleCode},#{description})
    </insert>

    <select id="getById" resultType="Role">
        <include refid="column"/>
        from acl_role where id = #{id}
    </select>

    <update id="update">
        update acl_role set
        <if test="roleName != null and roleName != '' ">
            role_name = #{roleName} ,
        </if>
        <if test="roleCode != null and roleCode != '' ">
            role_code = #{roleCode} ,
        </if>
        <if test="description != null and description != '' ">
            description = #{description} ,
        </if>
        update_time = now()
        where id = #{id}
    </update>

    <!-- 删除 -->
    <update id="delete">
        update acl_role set
	        update_time = now() ,
	        is_deleted = 1
        where
        	id = #{id}
</update>

    <sql id="findPageWhere">
        <where>
            <if test="roleName != null and roleName != ''">
               and role_name like concat('%',#{roleName},'%')
            </if>
            and is_deleted = 0
        </where>
    </sql>

    <select id="findPage" resultType="Role">
        <include refid="column"/>
        from acl_role
            <include refid="findPageWhere"/>
        order by id desc
    </select>

    <!--查询所有-->
    <select id="findAll" resultType="Role">
        <include refid="column"/>
        from acl_role
        where is_deleted = 0
    </select>

</mapper>
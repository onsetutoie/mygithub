<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.dao.AdminDao">

     <sql id="column">
          select id,username,password,name,phone,head_url,description,
          create_time,update_time,is_deleted
     </sql>

    <!--分页及带条件查询的方法-->
    <select id="findPage" resultType="admin">
        <include refid="column"></include>
        from acl_admin
        <where>
            <if test="username != null and username != ''">
                username like "%"#{username}"%" and
            </if>
            <if test="name != null and name != ''">
                name like "%"#{name}"%" and
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone} and
            </if>
            <if test="createTimeBegin != null and createTimeBegin != ''">
                create_time >= #{createTimeBegin} and
            </if>
            <if test="createTimeEnd != null and createTimeEnd != ''">
                create_time &lt;= #{createTimeEnd} and
            </if>
            is_deleted = 0
        </where>
        order by id desc
    </select>

    <!--添加-->
    <insert id="insert">
        insert into acl_admin (username,password,name,phone,head_url)
        value (#{username},#{password},#{name},#{phone},#{headUrl})
    </insert>

    <!--根据id查询-->
    <select id="getById" resultType="admin">
        <include refid="column"/>
        from acl_admin
        where id = #{id}
    </select>

    <!--更新-->
    <update id="update">
        update acl_admin
        set
        <if test="name != null and name != ''">
            name = #{name},
        </if>
        <if test="phone != null and phone != ''">
            phone = #{phone},
        </if>
        update_time = now()
        where id = #{id}
    </update>

    <!--删除-->
    <delete id="delete">
        update acl_admin set is_deleted = 1
        where id = #{id}
    </delete>
</mapper>
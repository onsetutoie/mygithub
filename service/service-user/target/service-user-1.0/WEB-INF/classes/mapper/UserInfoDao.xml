<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.dao.UserInfoDao">

    <resultMap id="UserInfo" type="UserInfo">
        <result property="id" column="id"/>
        <result property="phone" column="phone"/>
        <result property="password" column="password"/>
        <result property="nickName" column="nick_name"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>

    <sql id="colums" >
              id,phone,password,nick_name,status,create_time,update_time,is_deleted
    </sql>

    <insert id="insert" >
        insert into user_info (
        phone,password,nick_name,status
        ) values (
            #{phone} ,
           #{password} ,
           #{nickName} ,
           #{status}
           )
    </insert>

    <update id="update" >
        update user_info set
        <if test="phone != null and phone != ''">
            phone = #{phone} ,
        </if>
        <if test="password != null and password != ''">
            password = #{password} ,
        </if>
        <if test="nickName != null and nickName != ''">
            nick_name = #{nickName} ,
        </if>
        <if test="status != null and status != ''">
            status = #{status} ,
        </if>
        update_time = now()
        where id = #{id}
    </update>

    <delete id="delete">
        update user_info set is_deleted = 1 where id = #{id}
    </delete>

    <select id="getById" resultMap="UserInfo">
        select <include refid="colums"/>
        from user_info
        where id = #{id}
    </select>

    <sql id="findPageWhere">
        <where>
            <if test="phone != null and phone != ''">
                and  phone = #{phone}
            </if>
            and is_deleted = 0
        </where>
    </sql>
    
    <select id="findPage" resultMap="UserInfo">
        select <include refid="colums"/>
        from user_info
        <include refid="findPageWhere"/>
        order by id desc
    </select>

    <select id="getByPhone" resultMap="UserInfo">
        select <include refid="colums"/>
        from user_info
        where  phone = #{phone}
        and is_deleted = 0
    </select>


</mapper>
